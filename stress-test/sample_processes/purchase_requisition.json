{
    "name": "Purchase Requisition Process",
    "description": "Standard procurement flow - notorious for bottlenecks",
    "start": "start",
    "end": "end",
    "nodes": [
        {
            "id": "start",
            "name": "Purchase Request Created",
            "type": "start",
            "next": [
                "spec_review"
            ]
        },
        {
            "id": "spec_review",
            "name": "Specs Review",
            "type": "task",
            "base_time": 2,
            "next": [
                "cost_estimate"
            ]
        },
        {
            "id": "cost_estimate",
            "name": "Cost Estimation",
            "type": "task",
            "base_time": 3,
            "next": [
                "threshold_check"
            ]
        },
        {
            "id": "threshold_check",
            "name": "Amount Threshold Check",
            "type": "gateway_xor",
            "next": [
                "manager_approval",
                "director_approval"
            ]
        },
        {
            "id": "manager_approval",
            "name": "Manager Approval (<$5K)",
            "type": "approval",
            "wait_time": 4,
            "approval_probability": 0.90,
            "next": [
                "vendor_selection"
            ]
        },
        {
            "id": "director_approval",
            "name": "Director Approval (>$5K)",
            "type": "approval",
            "wait_time": 8,
            "approval_probability": 0.70,
            "next": [
                "finance_review"
            ]
        },
        {
            "id": "finance_review",
            "name": "Finance Department Review",
            "type": "approval",
            "wait_time": 12,
            "approval_probability": 0.65,
            "next": [
                "cfo_approval"
            ]
        },
        {
            "id": "cfo_approval",
            "name": "CFO Final Approval",
            "type": "approval",
            "wait_time": 15,
            "approval_probability": 0.85,
            "next": [
                "vendor_selection"
            ]
        },
        {
            "id": "vendor_selection",
            "name": "Vendor Selection",
            "type": "task",
            "base_time": 5,
            "next": [
                "po_creation"
            ]
        },
        {
            "id": "po_creation",
            "name": "PO Creation",
            "type": "task",
            "base_time": 1,
            "next": [
                "legal_review"
            ]
        },
        {
            "id": "legal_review",
            "name": "Legal Contract Review",
            "type": "approval",
            "wait_time": 10,
            "approval_probability": 0.75,
            "next": [
                "send_po"
            ]
        },
        {
            "id": "send_po",
            "name": "Send PO to Vendor",
            "type": "task",
            "base_time": 1,
            "next": [
                "end"
            ]
        },
        {
            "id": "end",
            "name": "Purchase Complete",
            "type": "end",
            "next": []
        }
    ]
}